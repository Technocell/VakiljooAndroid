<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_view_orange"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">
    <CheckBox
        android:id="@+id/check0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check0"
        android:id="@+id/txt0"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شنبه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />

    <CheckBox
        android:id="@+id/check1"
        app:layout_constraintRight_toLeftOf="@id/txt0"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check1"
        android:id="@+id/txt1"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="یکشنبه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />


    <CheckBox
        android:id="@+id/check2"
        app:layout_constraintRight_toLeftOf="@id/txt1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check2"
        android:id="@+id/txt2"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دوشنبه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />

    <CheckBox
        android:id="@+id/check3"
        app:layout_constraintRight_toLeftOf="@id/txt2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check3"
        android:id="@+id/txt3"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سه شنبه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />

    <CheckBox
        android:id="@+id/check4"
        app:layout_constraintRight_toLeftOf="@id/txt3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check4"
        android:id="@+id/txt4"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="چهارشنبه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />
    <CheckBox
        android:id="@+id/check5"
        app:layout_constraintRight_toLeftOf="@id/txt4"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check5"
        android:id="@+id/txt5"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پنجشنبه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />
    <CheckBox
        android:id="@+id/check6"
        app:layout_constraintRight_toLeftOf="@id/txt5"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:theme="@style/CheckBoxTheme" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/check6"
        android:id="@+id/txt6"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="جمعه"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />


</android.support.constraint.ConstraintLayout>