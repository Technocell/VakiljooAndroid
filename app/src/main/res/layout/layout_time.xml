<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/az"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="از"
        android:layout_marginLeft="12dp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="MissingPrefix" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:layout_constraintRight_toLeftOf="@id/az"
        card_view:layout_constraintTop_toTopOf="@id/az"
        android:layout_marginRight="8dp"
        >
        <TextView
            android:id="@+id/t1"
            fontPath="fonts/vazir.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 00 : 00 "
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/ta"
        fontPath="fonts/vazir.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تا"
        android:layout_marginLeft="12dp"
        card_view:layout_constraintRight_toLeftOf="@id/card_view"
        card_view:layout_constraintTop_toTopOf="@id/az"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="MissingPrefix" />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:layout_constraintRight_toLeftOf="@id/ta"
        card_view:layout_constraintTop_toTopOf="@id/az"
        android:layout_marginRight="8dp"
        >
        <TextView
            android:id="@+id/t2"
            fontPath="fonts/vazir.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 00 : 00 "
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>