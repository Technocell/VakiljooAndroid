<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VakilInformationActivity"
    android:weightSum="10.5"
    >
    <RelativeLayout
        android:id="@+id/relative_infio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="3.5">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/vakile_profile"
            android:layout_alignParentRight="true"
            app:civ_border_color="@color/green_blue_color"
            app:civ_border_width="3dp"
            tools:ignore="MissingConstraints"
            />
        <LinearLayout
            android:id="@+id/line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >


            <TextView
                android:layout_marginRight="60dp"
                fontPath="fonts/vazir.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/green_blue_color"
                android:textSize="30sp"
                android:layout_gravity="right"
                tools:ignore="MissingPrefix" />


            <TextView
                android:layout_marginRight="60dp"
                fontPath="fonts/vazir.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/family_name"
                android:textColor="@color/green_blue_color"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green_blue_color"
        android:layout_below="@id/relative_infio"/>
    <android.support.design.widget.TabLayout
        android:layout_below="@id/line"
        android:id="@+id/view_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:tabMode="fixed"
        app:tabGravity="center" />
    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/view_pager"
        android:layout_below="@id/view_pager_tab">

    </android.support.v4.view.ViewPager>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="4"
    android:weightSum="4"
    android:background="@color/background_color">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@drawable/card_view"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        >
        <EditText
            android:lines="8"
            android:minLines="8"
            android:textSize="25sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:id="@+id/mTahselat"
            android:textColor="@color/colorPrimary"
            fontPath="fonts/vazir.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="درباره ی خودتان بنویسید ..."
            android:inputType="text"
            tools:ignore="MissingPrefix" />
    </android.support.v7.widget.CardView>

    <Button
        fontPath="fonts/vazir.ttf"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:id="@+id/mMovakelBtn"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_back"
        android:text="ثبت تغییرات"
        tools:ignore="MissingPrefix" />
</LinearLayout>






</LinearLayout>


